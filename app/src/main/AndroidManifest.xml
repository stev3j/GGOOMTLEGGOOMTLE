    package="com.example.goalapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="GoalApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".view.activity.MakeTodayGoalActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.UpdateGoalActivity"
            android:exported="false"/>
        <activity
            android:name=".view.activity.GoalActivity"
            android:exported="false"/>
        <activity
            android:name=".view.activity.MakeGoalActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.MainActivity"
            android:exported="false">
        </activity>
    </application>

</manifest>